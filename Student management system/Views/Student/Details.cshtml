@model Student_management_system.model.students
@{
    ViewData["Title"] = "Student Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-custom">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h3 class="card-title text-center">Student Details</h3>
                </div>
                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-md-12 text-center mb-4">
                            <i class="bi bi-person-circle display-1 text-muted"></i>
                        </div>
                    </div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Full Name</label>
                            <p class="fw-bold lead">@Model.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Enrollment Number</label>
                            <p class="fw-bold lead">@Model.EnrollmentNumber</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Email</label>
                            <p><i class="bi bi-envelope me-2"></i>@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Phone</label>
                            <p><i class="bi bi-telephone me-2"></i>@Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Date of Birth</label>
                            <p><i class="bi bi-calendar me-2"></i>@Model.DateOfBirth.ToShortDateString()</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Address</label>
                            <p><i class="bi bi-geo-alt me-2"></i>@Model.address</p>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Edit Student</a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
