@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Dashboard</h2>
        <a asp-controller="Student" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add New Student
        </a>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card card-custom border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-people fs-1 text-primary"></i>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted mb-1">Total Students</h6>
                            <h2 class="card-title mb-0">@ViewBag.TotalStudents</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-journal-check fs-1 text-success"></i>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted mb-1">Active Enrollments</h6>
                            <h2 class="card-title mb-0">87</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-exclamation-triangle fs-1 text-warning"></i>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted mb-1">Pending Alerts</h6>
                            <h2 class="card-title mb-0">3</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom border-start border-4 border-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-calendar-event fs-1 text-info"></i>
                        </div>
                        <div>
                            <h6 class="card-subtitle text-muted mb-1">Upcoming Events</h6>
                            <h2 class="card-title mb-0">5</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity / Quick Links -->
    <div class="row">
        <div class="col-md-8">
            <div class="card card-custom">
                <div class="card-body">
                    <h5 class="card-title mb-4">Recent Activity</h5>
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-person-plus text-success me-2"></i>
                                <strong>John Doe</strong> was added to the system.
                            </div>
                            <span class="text-muted small">2 mins ago</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-pencil text-primary me-2"></i>
                                <strong>Jane Smith</strong> updated enrollment details.
                            </div>
                            <span class="text-muted small">1 hour ago</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-trash text-danger me-2"></i>
                                <strong>Student #452</strong> was removed.
                            </div>
                            <span class="text-muted small">3 hours ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h5 class="card-title mb-4">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-controller="Student" asp-action="Create" class="btn btn-outline-primary text-start">
                            <i class="bi bi-person-plus me-2"></i> Register Student
                        </a>
                        <button class="btn btn-outline-secondary text-start">
                            <i class="bi bi-file-earmark-text me-2"></i> Generate Report
                        </button>
                        <button class="btn btn-outline-secondary text-start">
                            <i class="bi bi-gear me-2"></i> System Settings
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
